<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin â€¢ Orders</title>
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(180deg, #f6fbff 0%, #edf3ff 45%, #f5f7fb 100%);
      font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }
    .page-card {
      background: #fff;
      border-radius: 22px;
      box-shadow: 0 20px 45px rgba(15,23,42,.12), 0 3px 10px rgba(15,23,42,.08);
    }
    .hero-intro {
      background: linear-gradient(135deg, #eef4ff 0%, #fef9ff 50%, #ecf3ff 100%);
      border-radius: 22px;
      padding: 1.5rem 2rem;
      border: 1px solid rgba(99, 123, 255, .15);
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
      position: relative;
      overflow: hidden;
    }
    .hero-intro::after {
      content: "";
      position: absolute;
      width: 180px;
      height: 180px;
      background: radial-gradient(circle at top right, rgba(255, 143, 223, .35), transparent 70%);
      top: -80px;
      right: -60px;
      border-radius: 50%;
    }
    .hero-icon {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      background: linear-gradient(135deg, #0d6efd, #54a9ff);
      color: #fff;
      font-size: 1.8rem;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 12px 25px rgba(13, 110, 253, .35);
    }
    .hero-text h2 { margin-bottom: .4rem; font-weight: 700; color: #101828; }
    .hero-text p { margin: 0; color: #475467; }
    .hero-badge {
      background: rgba(99, 123, 255, .12);
      color: #4154ff;
      padding: .25rem .85rem;
      border-radius: 999px;
      font-size: .8rem;
      text-transform: uppercase;
      letter-spacing: .08em;
    }
    .table thead th {
      font-size: .8rem;
      letter-spacing: .08em;
      text-transform: uppercase;
      color: #64748b;
    }
    .status-pill {
      padding: 0.15rem 0.85rem;
      border-radius: 999px;
      font-size: .75rem;
      font-weight: 600;
      border: 1px solid transparent;
      text-transform: capitalize;
    }
    .status-pending { background: #fff4e5; color: #b26b00; border-color: #ffdcb1; }
    .status-complete { background: #e5f7ef; color: #0f8c4b; border-color: #b5eccf; }
    .status-cancelled { background: #feecec; color: #c53333; border-color: #f8bcbc; }
    .status-default { background: #eef2fb; color: #475467; border-color: #dce3f3; }
    .action-btn {
      border-radius: 999px;
      font-weight: 600;
      padding-inline: 1rem;
    }
  </style>
</head>
<body>
  <%- include('partials/adminNav', { active: 'orders' }) %>

  <div class="container my-4">
    <div class="page-card p-4">
      <div class="hero-intro">
        <div class="hero-icon" aria-hidden="true">ðŸ§¾</div>
        <div class="hero-text">
          <h2 class="mb-1">All Orders</h2>
          <p>Monitor order health, spot delays quickly, and dive into customer details.</p>
        </div>
        <span class="hero-badge">Operations</span>
      </div>

      <% if (messages && messages.length) { %>
        <div class="alert alert-info">
          <% messages.forEach(function(m){ %>
            <div><%= m %></div>
          <% }) %>
        </div>
      <% } %>

      <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
        <input
          id="orderFilter"
          class="form-control"
          placeholder="Filter by invoice, user or email..."
          style="max-width: 360px; border-radius: 999px;">
        <div class="text-muted small align-self-center">
          <%= orders.length %> order<%= orders.length === 1 ? '' : 's' %>
        </div>
      </div>

      <% if (!orders.length) { %>
        <div class="alert alert-info">No orders found.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table align-middle" id="ordersTable">
            <thead>
              <tr>
                <th>#</th>
                <th>Invoice</th>
                <th>User</th>
                <th>Email</th>
                <th>Total</th>
                <th>Date / Status</th>
                <th style="width:170px;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order, index) {
                   const statusLabel = order.status || 'Pending for delivery';
                   const statusKey = statusLabel.toLowerCase();
                   let statusClass = 'status-default';
                   if (statusKey.includes('pend') || statusKey.includes('deliver')) statusClass = 'status-pending';
                   else if (statusKey.includes('complete') || statusKey.includes('ship')) statusClass = 'status-complete';
                   else if (statusKey.includes('cancel') || statusKey.includes('fail')) statusClass = 'status-cancelled';
              %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="fw-semibold"><%= order.invoiceNumber %></td>
                  <td><%= order.username %></td>
                  <td class="text-muted"><%= order.email %></td>
                  <td>$<%= Number(order.total).toFixed(2) %></td>
                  <td>
                    <div class="d-flex justify-content-between flex-wrap gap-2 align-items-center">
                      <span><%= new Date(order.createdAt).toLocaleString() %></span>
                      <span class="status-pill <%= statusClass %>"><%= statusLabel %></span>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex gap-2 flex-wrap">
                      <a href="/admin/orders/<%= order.id %>/edit" class="btn btn-secondary btn-sm action-btn">Edit</a>
                      <a href="/admin/orders/<%= order.id %>" class="btn btn-outline-primary btn-sm action-btn">View</a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <style>
    :root { --app-footer-height: 68px; }
    html, body { height: auto !important; }
    body { padding-bottom: calc(var(--app-footer-height) + 140px); }
    .app-footer { background-color: #0b2131; color: #e6edf3; }
    .app-footer a { color: #e6edf3; text-decoration: none; }
    .app-footer a:hover { text-decoration: underline; }
    .app-footer-fixed { position: fixed; left: 0; right: 0; bottom: 0; z-index: 1030; }
    .app-footer-gradient { height: 4px; background: linear-gradient(90deg, var(--bs-primary,#0d6efd), var(--bs-info,#0dcaf0), var(--bs-success,#198754), var(--bs-warning,#ffc107), var(--bs-danger,#dc3545)); }
    .app-footer-inner { font-size: .95rem; }
  </style>

  <%- include('partials/footer', { footerClass: 'app-footer-fixed' }) %>

  <script>
    const orderFilter = document.getElementById('orderFilter');
    const ordersTable = document.getElementById('ordersTable');

    if (orderFilter && ordersTable) {
      const rows = ordersTable.querySelectorAll('tbody tr');

      orderFilter.addEventListener('input', function(){
        const query = this.value.trim().toLowerCase();
        rows.forEach(row => {
          const invoice = row.cells[1]?.innerText.toLowerCase() || '';
          const user = row.cells[2]?.innerText.toLowerCase() || '';
          const email = row.cells[3]?.innerText.toLowerCase() || '';
          const match = invoice.includes(query) || user.includes(query) || email.includes(query);
          row.style.display = match ? '' : 'none';
        });
      });
    }
  </script>
</body>
</html>
