<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"> <!-- Use UTF-8 encoding -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsive layout on mobile -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap 5 CSS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap 5 JS bundle -->
  <title>Admin - Orders</title>
  <style>
    body { background-color: #f7f7f9; } /* Light grey background */
    .navbar { box-shadow: 0 2px 6px rgba(0,0,0,.05); } /* Soft shadow under navbar */
    .page-card { background: #fff; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,.06); } /* Card wrapper for content */
    .table thead th { font-size: .85rem; letter-spacing: .02em; text-transform: uppercase; color: #6c757d; } /* Table header styling */
    .status-pill { padding: 0.15rem 0.85rem; border-radius: 999px; font-size: .75rem; font-weight: 600; border: 1px solid transparent; text-transform: capitalize; } /* Badge for order status */
    .status-pending { background: #fff4e5; color: #b26b00; border-color: #ffdcb1; } /* Pending / delivering style */
    .status-complete { background: #e5f7ef; color: #0f8c4b; border-color: #b5eccf; } /* Completed / shipped style */
    .status-cancelled { background: #feecec; color: #c53333; border-color: #f8bcbc; } /* Cancelled / failed style */
    .status-default { background: #eef2fb; color: #475467; border-color: #dce3f3; } /* Fallback style if no match */
  </style>
</head>
<body>
  <!-- Admin navbar with "orders" highlighted -->
  <%- include('partials/adminNav', { active: 'orders' }) %>

  <div class="container my-4">
    <div class="page-card p-4">
      <!-- Page title -->
      <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="m-0">All Orders</h2>
      </div>

      <!-- Flash messages (e.g. "Order deleted", "Order updated") -->
      <% if (messages && messages.length) { %>
        <div class="alert alert-info">
          <% messages.forEach(function(m){ %>
            <div><%= m %></div>
          <% }) %>
        </div>
      <% } %>

      <!-- Filter box for quick searching by invoice, user, or email -->
      <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
        <input
          id="orderFilter"
          class="form-control form-control-sm"
          placeholder="Filter by invoice, user or email..."
          style="max-width: 320px;">
      </div>

      <!-- No orders case -->
      <% if (!orders.length) { %>
        <div class="alert alert-info">No orders found.</div>
      <% } else { %>
        <!-- Orders table -->
        <div class="table-responsive">
          <table class="table table-striped align-middle" id="ordersTable">
            <thead>
              <tr>
                <th>#</th>        <!-- Row index -->
                <th>Invoice</th>  <!-- Invoice number -->
                <th>User</th>     <!-- Username -->
                <th>Email</th>    <!-- User email -->
                <th>Total</th>    <!-- Total amount -->
                <th>Date</th>     <!-- Date + status pill -->
                <th style="width:160px;">Actions</th> <!-- Edit / View -->
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order, index) { 
                   const statusLabel = order.status || 'Pending for delivery'; // Fallback status text
                   const statusKey = statusLabel.toLowerCase();
                   let statusClass = 'status-default'; // Default badge style

                   // Map different status keywords to visual classes
                   if (statusKey.includes('pend') || statusKey.includes('deliver')) statusClass = 'status-pending';
                   else if (statusKey.includes('complete') || statusKey.includes('ship')) statusClass = 'status-complete';
                   else if (statusKey.includes('cancel') || statusKey.includes('fail')) statusClass = 'status-cancelled';
              %>
                <tr>
                  <td><%= index + 1 %></td> <!-- 1-based index -->
                  <td><%= order.invoiceNumber %></td>
                  <td><%= order.username %></td>
                  <td><%= order.email %></td>
                  <td>$<%= Number(order.total).toFixed(2) %></td> <!-- Total formatted to 2 decimals -->
                  <td>
                    <div class="d-flex justify-content-between flex-wrap gap-2 align-items-center">
                      <!-- Order creation date/time -->
                      <span><%= new Date(order.createdAt).toLocaleString() %></span>
                      <!-- Status pill -->
                      <span class="status-pill <%= statusClass %>"><%= statusLabel %></span>
                    </div>
                  </td>
                  <td>
                    <!-- Action buttons: Edit, View -->
                    <div class="d-flex gap-2 flex-wrap">
                      <a href="/admin/orders/<%= order.id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                      <a href="/admin/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

<!-- Footer + layout styles for fixed footer -->
<style>
  :root { --app-footer-height: 68px; } /* Reusable footer height variable */
  html, body { height: auto !important; } /* Let page height grow with content */
  body { 
    min-height: 100vh;
    padding-bottom: calc(var(--app-footer-height) + 140px); /* Extra space so footer doesn't overlap table */
  }
  .app-footer { background-color: #0b2131; color: #e6edf3; } /* Footer background & text color */
  .app-footer a { color: #e6edf3; text-decoration: none; }  /* Footer links */
  .app-footer a:hover { text-decoration: underline; }       /* Footer link hover */
  .app-footer-fixed { position: fixed; left: 0; right: 0; bottom: 0; z-index: 1030; } /* Fixed at bottom of screen */
  .app-footer-gradient { height: 4px; background: linear-gradient(90deg, var(--bs-primary, #0d6efd), var(--bs-info, #0dcaf0), var(--bs-success, #198754), var(--bs-warning, #ffc107), var(--bs-danger, #dc3545)); } /* Thin colorful bar above footer */
  .app-footer-inner { font-size: .95rem; } /* Slightly smaller footer text size */
</style>

<!-- Shared footer partial, using fixed footer class -->
<%- include('partials/footer', { footerClass: 'app-footer-fixed' }) %>

<!-- Small client-side filter for the orders table -->
<script>
  const orderFilter = document.getElementById('orderFilter');     // Search input
  const ordersTable = document.getElementById('ordersTable');     // Table element

  if (orderFilter && ordersTable) {
    const rows = ordersTable.querySelectorAll('tbody tr');        // All table rows

    orderFilter.addEventListener('input', function(){
      const query = this.value.trim().toLowerCase();              // Normalized search term

      rows.forEach(row => {
        const invoice = row.cells[1]?.innerText.toLowerCase() || ''; // Invoice column text
        const user = row.cells[2]?.innerText.toLowerCase() || '';    // Username column text
        const email = row.cells[3]?.innerText.toLowerCase() || '';   // Email column text

        // Row is shown if any of the fields contain the search query
        const match = invoice.includes(query) || user.includes(query) || email.includes(query);
        row.style.display = match ? '' : 'none';                   // Hide or show row
      });
    });
  }
</script>
</body>
</html>
